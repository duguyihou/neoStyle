{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["ES6","ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "ES2022"],
    "noUnusedParameters": true,
    "declaration": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "packages/neostyle",
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
